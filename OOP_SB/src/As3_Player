package Assignments;

public class As3_Player {

    private String name;

    private String playerID;

    private double avgPoints;


    public As3_Player(String n, String p, double a) {
        name = n;
        playerID = p;
        avgPoints = a;


    }//constructor


    public void printMe(){
        System.out.println("The player is " + name + " from " + playerID + " with " + avgPoints + " points ");
    }

    public void addPoints(double points) {
        avgPoints += points;
        System.out.println(name + " average went up by a point, Avg points now: " + avgPoints);
    }

    public double getAvgPoints() {
        return avgPoints;
    }

    public String getName() {
        return name;
    }
}

